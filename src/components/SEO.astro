---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  type?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title = "OpenObserve: Open Source Observability Platform | Logs, Metrics & Traces",
  description = "Fast, scalable and cost-effective open source observability platform. Monitor logs, metrics & traces with 140x lower storage costs than Elasticsearch. Start in 2 minutes.",
  image,
  canonical,
  type = "website",
  publishedTime,
  modifiedTime,
} = Astro.props;

// Fallback logic for image
const ogImage =
  typeof image === "string" && image.trim() !== ""
    ? image
    : "/o2-seo-image.png";

const canonicalURL = canonical
  ? `${process.env.PUBLIC_APP_BASE_URL}${canonical}`
  : Astro.url.href;
---

<!-- General Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(ogImage, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(ogImage, Astro.url)} />

<!-- Article Specific Tags -->
{
  publishedTime && (
    <meta property="articles:published_time" content={publishedTime} />
  )
}
{
  modifiedTime && (
    <meta property="articles:modified_time" content={modifiedTime} />
  )
}

<!-- Sitemap -->
<link rel="sitemap" href="/sitemap-index.xml" />
