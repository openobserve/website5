          {
            "id": "efficiency-section",
            "heading": {
              "title": "Efficiency",
              "description": ""
            },
            "cardData": {
              "quote": "OpenObserve has proven to be a reliable and cost-effective solution built to address real-world challenges.",
              "name": "Wayne Creel",
              "role": "CTO, ONEngine",
              "avatar": "/img/client/wayne-creel.jpg"
            },
            "items": [
              {
                "title": "Lower Storage Costs",
                "description": "140x lower storage cost when benchmarked against Elastic Search."
              },
              {
                "title": "High Compression",
                "description": "OpenObserve provides high compression (~40x), columnar storage with Apache Parquet."
              },
              {
                "title": "Bring Your Own Bucket",
                "description": "OpenObserve supports efficient long-term storage including local disk, S3, MinIO, GCS, and Azure Blob Storage."
              }
