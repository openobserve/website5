---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="/favicon.ico" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <script src="/js/zinc.js" is:inline></script>
    <script src="/js/clarity.js" is:inline></script>
    <script src="/js/vector_co.js" is:inline></script>
    <meta name="generator" content={Astro.generator} />
    <SEO title={metaObj?.title} description={metaObj?.description} />
    <!-- type={type}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime} -->
  </head>
  <body class="relative">
    <main>
      <!-- Listen for the open-search-modal event -->
      <script is:inline>
        window.addEventListener("open-search-modal", () => {
          const searchModal = document.getElementById("search-modal");
          if (searchModal) {
            searchModal.classList.remove("hidden");
            // searchModal.classList.add("pagefind-ui");
          }
        });
      </script>
      <Header navData={HeaderData?.data} class="sticky top-0 z-50 bg-black/50 backdrop-blur-3xl" client:only />
      <!-- Pagefind Search Component -->
      <Search
        id="search-modal"
        className="hidden"
        uiOptions={{ showImages: false }}
      />
      <PricingModelPopUp
        primaryButton={BannerData?.data?.secondaryButton}
        bottomText={BannerData?.data?.bottomText}
        monthlyText={BannerData?.data?.monthlyText}
        items={BannerData?.data?.items}
        featureTitle={BannerData?.data?.featureTitle}
        client:load
      />
      <!-- Import your modal component here -->
      <div class="navbarheight">
        <slot />
      </div>
      <Footer
        footerData={FooterData?.data?.footerData}
        copyRightText={FooterData?.data?.copyRightText}
        termsOfService={FooterData?.data?.termsOfService}
        privacyText={FooterData?.data?.privacyText}
        socialMedia={FooterData?.data?.socialMedia}
        address={FooterData?.data?.address}
        client:load
      />
    </main>
  </body>
</html>

<style>
  html,
  body {
    background: #010101;
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Inter", sans-serif;
    scroll-behavior: smooth;
    scroll-padding-top: 8rem;
  }

  .navbarheight {
    padding-top: 1vh;
  }


</style>
