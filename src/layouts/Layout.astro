---
import "@/styles/global.css";
import navData from "@/content/navbar.json";
import FooterData from "@/content/footer.json";
import Footer from "@/components/footer/Footer.vue";
import Header from "@/components/header/Header.vue";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body class="relative min-h-screen flex flex-col">
    <div class="sticky top-0 z-[50]">
      <Header
        navData={navData?.data}
        class="bg-black/80 backdrop-blur-md w-full"
        client:only
      />
    </div>
    <main class="flex-grow">
      <slot />
    </main>
    <Footer
      footerData={FooterData?.data?.footerData}
      copyRightText={FooterData?.data?.copyRightText}
      termsOfService={FooterData?.data?.termsOfService}
      privacyText={FooterData?.data?.privacyText}
      socialMedia={FooterData?.data?.socialMedia}
      address={FooterData?.data?.address}
      client:load
    />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Inter", sans-serif;
    scroll-behavior: smooth;
    scroll-padding-top: 8rem;
  }
</style>
