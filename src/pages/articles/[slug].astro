---
import BlogDetailsHeroSection from "@/components/blog/BlogDetailsHeroSection.vue";
import Layout from "@/layouts/Layout.astro";
import {
  getResBlogsBySlug,
  getAllResourceBlogs,
  getAuthorDetails,
} from "@/utils/api/resources";
import BlogcontentWrapper from "@/components/blog/BlogcontentWrapper.vue";
import BlogSection from "@/components/blog/BlogSection.vue";
import { ArticlesResources } from "@/utils/constant";
import LatestArticles from "@/components/articles/LatestArticles.vue";

export async function getStaticPaths() {
  const blogs = await getAllResourceBlogs();
  return blogs?.map((it) => ({
    params: { slug: it.slug },
  }));
}

const { slug }: any = Astro.params;
const SlugData = (await getResBlogsBySlug(slug)) || {};
const authorsSlugs = SlugData.authors || [];

const author = await Promise.all(
  authorsSlugs.map(async (authorSlug: any) => {
    return await getAuthorDetails(authorSlug.slug);
  })
);
const allBlogs = await getAllResourceBlogs();
const metaObj = {
  title: SlugData?.seo?.title || SlugData?.title,
  description: SlugData?.seo?.description || SlugData?.description,
  image: SlugData?.seo?.image?.url || SlugData?.image?.url,
};
---

<Layout metaObj={metaObj}>
  <BlogDetailsHeroSection
    type="articles"
    title={SlugData?.title}
    description={SlugData?.description}
    blogImage={SlugData?.image}
    tags={SlugData?.tags || []}
    publishDate={new Intl.DateTimeFormat("en-US", {
      weekday: "long",
      year: "numeric",
      month: "long",
      day: "2-digit",
    }).format(new Date(SlugData?.publishDate))}
    content={SlugData?.content}
    shareUrl={`/articles/${slug}`}
    client:load
  />
  <!-- author={author} -->
  <BlogcontentWrapper
    type="articles"
    client:load
    content={SlugData?.content}
    blogImage={SlugData?.image}
  />
  <!-- authors={author} -->
  <div class="-mt-18 lg:-mt-24">
    <LatestArticles
      data={allBlogs.slice(0, 3)}
      sectionData={ArticlesResources}
      client:load
    />
  </div>
</Layout>
