---
import Layout from "../../../layouts/Layout.astro";
import ResourceHeroSection from "../../../components/heroSections/ResourceHeroSection.vue";
import BlogsWrapper from "../../../components/wrapper/BlogsWrapper.vue";
import TilesWithTitleWrapper from "../../../components/wrapper/TilesWithTitleWrapper.vue";
import BlogsListingWrapper from "../../../components/wrapper/BlogsListingWrapper.vue";
import CaseStudyWrapper from "../../../components/wrapper/CaseStudyWrapper.vue";
import BlogPagination from "../../../components/blogs/BlogPagination.vue";
import { getResourceAuthors, getAllBlogsCategoriesAndAuthors, getAllCategories, getResourceBlogsByAuthor, getCaseStudies } from "../../../utils/cache";

export async function getStaticPaths() {
  await getAllBlogsCategoriesAndAuthors();
  const authors = getResourceAuthors() || [];
  return authors.map((author) => ({
    params: { author: author.slug },
  }));
}

const { author } = Astro.params;
await getAllBlogsCategoriesAndAuthors();
const blogsData = getResourceBlogsByAuthor(author) || [];
const suggestionData = getAllCategories() || [];
const loadcaseStudyData = getCaseStudies() || [];

const cardHeader = {
  title: "Additional Learning Resources",
  description: "Stay ahead of the curve and optimize your observability strategy with our learning resources.",
};

const cardData = [
  {
    icon: "/resources/64pxComponent.svg",
    title: "Case Studies",
  },
];
---

<Layout>
  <ResourceHeroSection
    title="Blogs"
    subtitle={`Showing posts by author: ${author}`}
  />

  <CaseStudyWrapper
    items={loadcaseStudyData}
    title="Blog Posts"
    subtitle="Latest articles and updates"
    client:load
  />

  <BlogsListingWrapper
    type="articles"
    blogsData={blogsData}
    currentPage={1}
    suggestionData={suggestionData}
    client:load
  />

  <TilesWithTitleWrapper
    title={cardHeader.title}
    subtitle={cardHeader.description}
    items={cardData}
  />
</Layout>
