---
import {
  getAllResourceCategories,
  getResourcesByPaginationAndCategory,
  getCategoryDetails,
  getAllResourcesLists,
} from "@/utils/api/resources";
import Layout from "@/layouts/Layout.astro";
import BlogsListingWrapper from "@/components/blog/BlogListingWrapper.vue";
import CustomSection from "@/components/core/CustomSection.vue";
import BlogCategoryListing from "@/components/blog/BlogCategoryListing.vue";
import CommonHerosection from "@/components/herosection/CommonHeroSection.vue";
import BlogPageWrapper from "@/components/blog/BlogPageWrapper.vue";

// ðŸš€ Fetch All Categories and Blogs
export async function getStaticPaths() {
  const categories = await getAllResourceCategories();

  return categories.map((category) => ({
    params: { tag: category.slug },
  }));
}

// ðŸš€ Get Category Slug from URL
const { tag } = Astro.params;
const currentPage = 1;
// âœ… Fetch Additional Data
const suggestionData = await getAllResourceCategories();
// Get top 15 tags
let allTags = suggestionData.slice(0, 15);
const category = await getCategoryDetails(tag);
// Check if the current slug is a tag, and if it's missing in the top 15
if (tag && !allTags.find((tag) => tag.slug === tag)) {
    allTags.push(category); // Ensure selected tag is included
}
const { blogs, totalBlogs } = await getResourcesByPaginationAndCategory(
  currentPage,
  tag
);
const metaObj = {
  title:
    "Tag | Articles | Open Source Observability Platform for Logs, Metrics, Traces, and More - Your Ultimate Dashboard for Alerts and Insights",
};

const allArticlesData = await getAllResourcesLists();
---

<Layout metaObj={metaObj}>
  <CommonHerosection
    title="Articles"
    description={`Showing posts for category: ${category?.name}`}
    align="CENTER"
  />
  <CustomSection sectionClass="">
    <!-- <BlogCategoryListing
      categories={suggestionData.slice(0, Math.min(5, suggestionData.length)) ||
        []}
      allTags={suggestionData.slice(0, Math.min(12, suggestionData.length)) ||
        []}
      type="articles"
      client:load
    />
    <BlogsListingWrapper
      type="articles"
      blogsData={blogs}
      client:load
      subType="tag"
      totalItems={totalBlogs}
      identifier={tag}
      currentPage={currentPage}
      searchBar
      allBlogs={allArticlesData}
    /> -->
    <BlogPageWrapper
      categories={suggestionData.slice(0, Math.min(5, suggestionData.length))}
      allTags={allTags}
      type="articles"
      allBlogs={allArticlesData}
      blogsData={blogs}
      currentPage={currentPage}
      client:only="vue"
      subType="tag"
      identifier={tag}
    />
  </CustomSection>
</Layout>
