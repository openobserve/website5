---
import {
  getAllAuthors,
  getallBlogsWithoutCaseStudies,
  getAllCategories,
  getAllsubTags,
  getAllSuperiorCategories,
  getAuthorDetails,
  getBlogsByAuthor,
  getBlogsByPaginationAndAuthor,
} from "@/utils/api/blog";
import Layout from "@/layouts/Layout.astro";
import BlogsListingWrapper from "@/components/blog/BlogListingWrapper.vue";
import CustomSection from "@/components/core/CustomSection.vue";
import BlogCategoryListing from "@/components/blog/BlogCategoryListing.vue";
import CommonHerosection from "@/components/herosection/CommonHeroSection.vue";
import BlogPageWrapper from "@/components/blog/BlogPageWrapper.vue";
import { ITEMS_PER_PAGE } from "@/utils/api/constant";

// ðŸš€ Step 1: Generate dynamic paths for categories
export async function getStaticPaths() {
  const authors = await getAllAuthors();
  return authors?.map((author: any) => ({
    params: { author: author.slug },
  }));
}

// ðŸš€ Step 2: Get params from URL
const { author } = Astro.params;
const url = new URL(Astro.request.url);
const pageParam = url.searchParams.get("page");
const currentPage = pageParam ? parseInt(pageParam) : 1;

// Get author's blogs with pagination
const { blogs, totalBlogs, allBlogs } = await getBlogsByPaginationAndAuthor(
  currentPage,
  author as string
);

const auth = await getAuthorDetails(author);

// âœ… Fetch other required data
const allSuperiorCategories = await getAllSuperiorCategories();
const allsubTagsBasedonSuperiorTags = await getAllsubTags();

// For author page, get all blogs by this author
const allBlogsData = allBlogs || [];

console.log("Author Blogs Data:", allBlogsData);

const metaObj = {
  title: `${auth?.name} - Author | OpenObserve Blog`,
  description: `Read blog posts by ${auth?.name} on OpenObserve - Open Source Observability Platform for Logs, Metrics, Traces, and More`,
};
---

<Layout metaObj={metaObj}>
  <CommonHerosection
    title="Blog"
    description={`Posts by ${auth?.name}`}
    align="CENTER"
  />
  <CustomSection sectionClass="">
    <BlogPageWrapper
      categories={allSuperiorCategories}
      allTags={allsubTagsBasedonSuperiorTags}
      type="blog"
      allBlogs={allBlogsData}
      blogsData={blogs}
      currentPage={currentPage}
      totalItems={totalBlogs}
      client:only="vue"
      subType="author"
      identifier={author}
    />
  </CustomSection>
</Layout>
