---
import Layout from "@/layouts/Layout.astro";
import {
  getallBlogsWithoutCaseStudies,
  getAllCategories,
  getBlogsByPagination,
  getAllSuperiorCategories,
  getAllsubTags,
} from "@/utils/api/blog";
import { getTotalCounts } from "@/utils/cache";
import { ITEMS_PER_PAGE } from "@/utils/api/constant";
import BlogPageWrapper from "@/components/blog/BlogPageWrapper.vue";
import CustomSection from "@/components/core/CustomSection.vue";
import CommonHerosection from "@/components/herosection/CommonHeroSection.vue";

const { page } = Astro.params;
const currentPage = page ? parseInt(page) : 1;
const allSuperiorCategories = await getAllSuperiorCategories();
const allsubTagsBasedonSuperiorTags = await getAllsubTags();
const blogsData = await getBlogsByPagination(currentPage, ITEMS_PER_PAGE);
const allBlogsData = await getallBlogsWithoutCaseStudies();
const suggestionData = await getAllCategories();
const count = await getTotalCounts();

const metaObj = {
  title: "OpenObserve Blog | Observability News & Best Practices",
  description:
    "Stay updated with the latest in observability, monitoring best practices, and platform updates. Read technical guides and success stories from the OpenObserve team.",
};
---

<Layout metaObj={metaObj}>
  <CommonHerosection
    title="Blog"
    description="Explore latest insights and updates"
    align="CENTER"
  />
  <CustomSection sectionClass="">
    <BlogPageWrapper
      categories={allSuperiorCategories}
      allTags={allsubTagsBasedonSuperiorTags}
      type="blog"
      allBlogs={allBlogsData}
      blogsData={blogsData}
      currentPage={currentPage}
      client:only="vue"
    />
  </CustomSection>
</Layout>
