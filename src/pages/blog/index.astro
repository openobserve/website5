---
import Layout from "@/layouts/Layout.astro";
import {
  getAllBlogs,
  getAllCategories,
  getBlogsByPagination,
} from "@/utils/api/blog";
import { getTotalCounts } from "@/utils/cache";
import { ITEMS_PER_PAGE } from "@/utils/api/constant";
import BlogCategoryListing from "@/components/blog/BlogCategoryListing.vue";
import BlogListingWrapper from "@/components/blog/BlogListingWrapper.vue";
import CustomSection from "@/components/core/CustomSection.vue";
// Get the current page from URL parameters
const { page } = Astro.params;
const currentPage = page ? parseInt(page) : 1;

// Fetch blogs data with the current page
const blogsData = await getBlogsByPagination(currentPage, ITEMS_PER_PAGE);
const allBlogsData = (await getAllBlogs()).filter(
  (blog: any) => !blog.caseStudies
);
const suggestionData = await getAllCategories();
const count = await getTotalCounts();

const metaObj = {
  title: "OpenObserve Blog | Observability News & Best Practices",
  description:
    "Stay updated with the latest in observability, monitoring best practices, and platform updates. Read technical guides and success stories from the OpenObserve team.",
};
---

<Layout metaObj={metaObj}>
  <div class="relative" style={{ height: "350px" }}>
    <div
      class="absolute inset-0 bg-gradient-to-r from-primary-purple to-primary-blue"
      style={{ height: "350px" }}
    >
    </div>
    <div
      class="container mx-auto px-4 py-12 relative z-10 h-full flex flex-col justify-center"
    >
      <h1 class="text-4xl font-bold mb-2 text-white">Blog</h1>
      <p class="text-lg text-white opacity-90">
        Insights, tutorials, and updates from the OpenObserve team
      </p>
    </div>
  </div>
  <CustomSection sectionClass="">
    <BlogCategoryListing
      categories={suggestionData.slice(0, Math.min(5, suggestionData.length))}
      allTags={suggestionData.slice(0, Math.min(12, suggestionData.length))}
      type="blog"
      client:load
    />
    <BlogListingWrapper
      searchBar
      allBlogs={allBlogsData}
      type="blog"
      totalItems={count.blogsCount}
      currentPage={currentPage}
      blogsData={blogsData}
      client:load
    />
  </CustomSection>
</Layout>
