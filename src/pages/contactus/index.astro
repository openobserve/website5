---
// Import the content and types
import contactus from "@/content/contactus.json";
import Layout from "@/layouts/Layout.astro";
import ComponentCollectionMapper from "@/components/ComponentCollectionMapper.vue";
import BlogSection from "@/components/contactus/BlogSection.vue";

// Type-check the imported content
const data = contactus?.data?.body || {};
const filteredData = data.filter(
  (item) => item.__component !== "section-cards.blog"
);
const seoData = contactus?.data?.seo || {};
---

<Layout title={seoData?.title} description={seoData?.description}>
  <ComponentCollectionMapper data={filteredData} client:load />
  <BlogSection client:only="vue" />
</Layout>
