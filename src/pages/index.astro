---
import Layout from "@/layouts/Layout.astro";
import ComponentCollectionMapper from "@/components/ComponentCollectionMapper.vue";
import fetchApi from "@/utils/strapi";
const PageData = await fetchApi({
  endpoint: "api/homepage",
  query: { pLevel: "4", status: "draft" },
});
const data = PageData?.data?.body || {};
const metaData = PageData?.data?.seo || {};
---

<Layout metaObj={metaData}>
  <ComponentCollectionMapper data={data} client:load />
</Layout>
