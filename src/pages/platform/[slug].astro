---
// src/pages/platform/[slug].astro
import Layout from "@/layouts/Layout.astro";
import data from "@/content/platformsubpage.json";
import ComponentCollectionMapper from "@/components/ComponentCollectionMapper.vue";

export async function getStaticPaths() {
  return [
    {
      params: { slug: data.data.slug }, // 'logs'
      props: { pageData: data.data }, // whole object
    },
  ];
}

const { pageData } = Astro.props;
const seoData = pageData?.seo || {};
---

<Layout title={seoData?.title} description={seoData?.description}>
  <ComponentCollectionMapper data={pageData.body} client:load />
</Layout>
