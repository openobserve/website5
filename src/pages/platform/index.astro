---
import Layout from "../../layouts/Layout.astro";
import fetchApi from "../../utils/strapi";
import ComponentCollectionMapper from "../../components/ComponentCollectionMapper.vue";
import { getAllBlogsCategoriesAndAuthors, getCaseStudies } from "@/utils/cache";

const PageData = await fetchApi({
  endpoint: "api/platform",
  query: { pLevel: "10", status: "draft" },
});
await getAllBlogsCategoriesAndAuthors();
const loadcaseStudyData = getCaseStudies();
const metaObj = PageData?.data?.seo;
---

<Layout metaObj={metaObj}>
  <ComponentCollectionMapper
    data={PageData?.data?.body}
    caseStudyData={loadcaseStudyData}
    client:load
  />
</Layout>
