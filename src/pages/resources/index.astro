---
import Layout from "../../layouts/Layout.astro";
import ResourceHeroSection from "../../components/heroSections/ResourceHeroSection.vue";
import ResourceCardsWrapper from "../../components/wrapper/ResourceCardsWrapper.vue";
import BlogsWrapper from "../../components/wrapper/BlogsWrapper.vue";
const resourceCardHeader = {
  title: "Documentation",
  subtitle:
    "Access detailed guides and references to effectively utilize OpenObserve’s features.",
};
const resourceCardData = {
  items: [
    {
      icon: "/resources/User Guide.svg",
      title: "User Guide",
      description:
        "Step-by-step instructions for setting up and managing OpenObserve",
    },
    {
      icon: "/resources/API Reference.svg",
      title: "API Reference",
      description: "In-depth information on available APIs for integration.",
    },
    {
      icon: "/resources/Function Reference.svg",
      title: "Function Reference",
      description: "Detailed descriptions of functions and their usage.",
    },
  ],
};
const resourceCardFooter = {
  btnTitle: "VIEW DOCUMENTATION",
  btnLink: "#",
};
const blogHeader = {
  sectionTitle: "Blogs",
  sectionDescription:
    "Stay updated with articles on observability, OpenObserve updates, and industry news.",
};
const blogData = {
  recentPostsText: "Explore Latest Insights And Updates",
  blogs: [
    {
      title: "Blog 1",
      description:
        "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text.",
      imageUrl: "https://picsum.photos/400/300?random=1",
    },
    {
      title: "Blog 2",
      description:
        "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text.",
      imageUrl: "https://picsum.photos/400/300?random=2",
    },
    {
      title: "Blog 3",
      description:
        "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text.",
      imageUrl: "https://picsum.photos/400/300?random=3",
    },
  ],
};
---

<Layout>
  <ResourceHeroSection
    title="Resources"
    subtitle="Explore OpenObserve’s comprehensive resources to enhance your observability experience."
  />
  <ResourceCardsWrapper
    title={resourceCardHeader.title}
    subtitle={resourceCardHeader.subtitle}
    items={resourceCardData.items}
    noOfGridColumn={3}
    layout="row"
    btnTitle={resourceCardFooter.btnTitle}
    client:load
  />
  <BlogsWrapper
    title={blogHeader.sectionTitle}
    description={blogHeader.sectionDescription}
    items={blogData}
    client:load
  />
</Layout>
