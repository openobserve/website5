---
import Layout from "@/layouts/Layout.astro";
import ComponentCollectionMapper from "@/components/ComponentCollectionMapper.vue";
import resourcepage from "@/content/resources.json";
import { getAllBlogs } from "@/utils/api/blog";
import {caseStudies} from "@/pages/customer-stories/index.astro";
import { getAllResourceBlogs } from "@/utils/api/resources";
const data = resourcepage?.data?.body || {};
const seoData = resourcepage?.data?.seo || {};
const blogData = (await getAllBlogs())
  .slice(0, 10)
  .map(({ content, ...rest }) => rest);
const caseData = caseStudies.slice(0, 3);
const allArticlesData = (await getAllResourceBlogs()).slice(0, 10).map(({ content, ...rest }) => rest);
---

<Layout metaObj={seoData}>
  <ComponentCollectionMapper data={data} blogsData={blogData} caseStudyData={caseData} articlesData={allArticlesData} client:load />
</Layout>
