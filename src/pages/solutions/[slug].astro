---
import Layout from "@/layouts/Layout.astro";
import data from "@/content/solutionsubpage.json";
import ComponentCollectionMapper from "@/components/ComponentCollectionMapper.vue";
import { getAllBlogs } from "@/utils/api/blog";

export async function getStaticPaths() {
  return [
    {
      params: { slug: data.data.slug }, // 'aws-monitoring'
      props: { pageData: data.data }, // whole object
    },
  ];
}

const { pageData } = Astro.props;
const seoData = pageData?.seo || {};
const blogData = (await getAllBlogs())
  .slice(0, 10)
  .map(({ content, ...rest }) => rest);
---

<Layout title={seoData?.title} description={seoData?.description}>
  <ComponentCollectionMapper data={pageData.body} blogsData={blogData} client:load />
</Layout>
